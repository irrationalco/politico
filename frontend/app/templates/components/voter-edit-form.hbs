<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default panel-login">
            <div>
                <div class="vertical-offset-100 horizontal-padding">
                    <h3 class="voter-edit-title">{{form-title}}</h3>
                    <h5 style="color:#55cec5;">*Campos requeridos en verde</h5>
                </div>
            </div>
            <div class="panel-body">
                <form {{action (if voter.id 'update' 'create') voter on="submit" }} accept-charset="UTF-8" role="form" class="form-signin">
                    <fieldset>
                        
                        <h3>Credencial</h3>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <!--<label>Número de Credencial de Elector:<span class="text-danger">*</span></label>-->
                                {{input value=voter.electoral_id_number required=true placeholder="Número de Credencial de Elector" class="form-control voter-edit-field-required"}}
                            </div>
                            <div class="col-md-2">
                                <!--<label>Vigencia de Credencial de Elector:<span class="text-danger">*</span></label>-->
                                {{#x-select class="form-control voter-edit-select-required" value=voter.expiration_date required=true
                                on-change=(action "updateExpirationDate" voter) as |expir|}} 
                                    {{#expir.option value='' disabled=true selected=true hidden=true}}Seleccione una opción{{/expir.option}}
                                    {{#each years as |year|}}
                                        {{#expir.option value=year}}{{year}}{{/expir.option}} 
                                    {{/each}} 
                                {{/x-select}}
                            </div>
                        </div>

                        <h3 style="margin-top: 45px;">Información Personal</h3>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <!--<label>Apellido Paterno:<span class="text-danger">*</span></label>-->
                                {{input value=voter.first_last_name required=true placeholder="Apellido Paterno" class="form-control voter-edit-field-required"}}
                            </div>
                            <div class="col-md-3">
                                <!--<label>Apellido Materno:</label>-->
                                {{input value=voter.second_last_name placeholder="Apellido Materno" class="form-control voter-edit-field-required"}}
                            </div>
                            <div class="col-md-3">
                                <!--<label>Primer Nombre:<span class="text-danger">*</span></label>-->
                                {{input value=voter.first_name required=true placeholder="Primer Nombre" class="form-control voter-edit-field-required"}}
                            </div>
                            <div class="col-md-3">
                                <!--<label>Segundo Nombre:</label>-->
                                {{input value=voter.second_name placeholder="Segundo Nombre" class="form-control voter-edit-field"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <!--<label>Fecha de Nacimiento:<span class="text-danger">*</span></label>-->
                                {{bootstrap-datepicker value=voter.date_of_birth language="es" format="dd/mm/yyyy" required=true placeholder="Fecha de Nacimiento" class="form-control voter-edit-field-required"}}
                            </div>
                            <div class="col-md-2">
                                <!--<label>Genero:<span class="text-danger">*</span></label>-->
                                {{#x-select class="form-control voter-edit-select-required" value=voter.gender required=true on-change=(action "updateGender" voter) as |gnd|}} 
                                    {{#gnd.option value='' disabled=true selected=true hidden=true}}Género{{/gnd.option}}
                                    {{#gnd.option value="H"}}Hombre{{/gnd.option}}
                                    {{#gnd.option value="M"}}Mujer{{/gnd.option}} 
                                {{/x-select}}
                            </div>
                        </div>

                        <h3 style="margin-top: 45px;">Dirección</h3>
                        <div class="form-gorup row">
                            <div class="col-sm-4">
                                <!--<label>Colonia:<span class="text-danger">*</span></label>-->
                                {{input value=voter.suburb required=true placeholder="Colonia" class="form-control voter-edit-field-required"}}
                            </div>
                            <div class="col-sm-2">
                                <!--<label>Código Postal:<span class="text-danger">*</span></label>-->
                                {{input type="number" min=0 oninput="validity.valid||(value='');" value=voter.postal_code required=true placeholder="C.P." class="form-control voter-edit-field-required"}}
                            </div>
                        </div>
                        <div class="form-gorup row">
                            <div class="col-md-4">
                                <!--<label>Calle:</label>-->
                                {{input value=voter.street placeholder="Calle" class="form-control voter-edit-field"}}
                            </div>
                            <div class="col-sm-2">
                                <!--<label>Número Exterior:</label>-->
                                {{input value=voter.outside_number placeholder="Número Ext." class="form-control voter-edit-field"}}
                            </div>
                            <div class="col-sm-2">
                                <!--<label>Número Interior:</label>-->
                                {{input value=voter.inside_number placeholder="Número Int." class="form-control voter-edit-field"}}
                            </div>
                        </div>
                        <div class="form-gorup row">
                            <div class="col-md-4">
                                <!--<label>Municipio:</label>-->
                                {{input value=voter.municipality placeholder="Municipio" class="form-control voter-edit-field-required"}}
                            </div>
                            <div class="col-md-4">
                                <!--<label>Estado:</label>-->
                                {{#x-select class="form-control voter-edit-select-required" value=voter.state on-change=(action "updateState" voter) as |st|}}
                                    {{#st.option value='' disabled=true selected=true hidden=true}}Seleccione una opción{{/st.option}}
                                    {{#each states as |state idx|}}
                                        {{#st.option value=idx}}{{state}}{{/st.option}} 
                                    {{/each}} 
                                {{/x-select}}
                            </div>
                            <div class="col-md-4">
                                <!--<label>Localidad:</label>-->
                                {{input value=voter.locality placeholder="Localidad" class="form-control voter-edit-field"}}
                            </div>
                        </div>

                        <h3 style="margin-top: 45px;">Claves</h3>
                        <div class="form-group row">
                            <div class="col-md-6">
                                {{input value=voter.electoral_code required=true placeholder="Clave Electoral" class="form-control voter-edit-field-required"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                {{input value=voter.CURP placeholder="CURP" class="form-control voter-edit-field"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2">
                                <!--<label>Clave de Estado:<span class="text-danger">*</span></label>-->
                                {{input type="number" min=0 required=true oninput="validity.valid||(value='');" value=voter.state_code placeholder="Estado" class="form-control voter-edit-field-required"}}
                        <div class="form-gorup row">
                            <div class="col-sm-6">
                                <label>Estado:</label>
                                {{#x-select class="form-control" value=voter.state on-change=(action "updateState" voter) as |st|}}
                                    {{#st.option value='' disabled=true selected=true hidden=true}}Seleccione una opción{{/st.option}}
                                    {{#each states as |state idx|}}
                                        {{#st.option value=idx}}{{state}}{{/st.option}} 
                                    {{/each}} 
                                {{/x-select}}
                            </div>
                            <div class="col-md-2">
                                <!--<label>Clave de Municipio:<span class="text-danger">*</span></label>-->
                                {{input type="number" min=0 required=true oninput="validity.valid||(value='');" value=voter.municipality_code placeholder="Municipio" class="form-control voter-edit-field-required"}}
                            </div>
                            <div class="col-md-2">
                                <!--<label>Clave de Sección:</label>-->
                                {{input type="number" min=0 oninput="validity.valid||(value='');" value=voter.section placeholder="Sección" class="form-control voter-edit-field-required"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-2">
                                <!--<label>Clave de Localidad:</label>-->
                                {{input type="number" min=0 oninput="validity.valid||(value='');" value=voter.locality_code placeholder="Localidad" class="form-control voter-edit-field-required"}}
                            </div>
                        </div>

                        <h3 style="margin-top: 45px;">Contacto</h3>
                        <div class="form-group row">
                            <div class="col-md-4">
                                <!--<label>Teléfono Fijo:<span class="text-danger">*</span></label>-->
                                {{input type="number" min=0 required=true oninput="validity.valid||(value='');" value=voter.home_phone placeholder="Teléfono Fijo" class="form-control voter-edit-field"}}
                            </div>
                            <div class="col-md-4">
                                <!--<label>Teléfono Celular:<span class="text-danger">*</span></label>-->
                                {{input type="number" min=0 required=true oninput="validity.valid||(value='');" value=voter.mobile_phone placeholder="Teléfono Celular" class="form-control voter-edit-field"}}
                            <div class="col-sm-3">
                                <label>Clave de Municipio:<span class="text-danger">*</span></label> {{input type="number" min=0 required=true oninput="validity.valid||(value='');" value=voter.municipality_code placeholder="Municipio"
                                class="form-control"}}
                            </div>
                            <div class="col-sm-3">
                                <label>Clave de Sección:<span>*</span></label> {{input type="number" required=true min=0 oninput="validity.valid||(value='');" value=voter.section placeholder="Sección"
                                class="form-control"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-8">
                                <!--<label>Cuenta de Facebook:</label>-->
                                {{input value=voter.facebook_account placeholder="URL Facebook" class="form-control voter-edit-field"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-4">
                                <!--<label>Correo Electrónico:</label>-->
                                {{input type="email" value=voter.email placeholder="Email" class="form-control voter-edit-field"}}
                            </div>
                            <div class="col-md-4">
                                <!--<label>Correo Electrónico Alternativo:</label>--> 
                                {{input type="email" value=voter.alternative_email placeholder="Email 2" class="form-control voter-edit-field"}}
                            </div>
                        </div>

                        <h3 style="margin-top: 45px;">Partido</h3>
                        <div class="form-group row">
                            <div class="col-md-4">
                                <!--<label>Organización:</label>-->
                                {{input value=voter.organization placeholder="Organización" class="form-control voter-edit-field"}}
                            </div>
                            <div class="col-md-4">
                                <!--<label>Cargos Partidarios:</label>-->
                                {{input value=voter.party_positions_held placeholder="Cargos Partidarios" class="form-control voter-edit-field"}}
                            </div>
                            <div class="col-md-4">
                                <label>Pertenece a Estructura</label>
                                {{input type="checkbox" checked=voter.is_part_of_party class="form-control"}}
                            </div>
                        </div>

                        <h3 style="margin-top: 45px;">Cargos Populares</h3>
                        <div class="form-group row">
                            <div class="col-md-4">
                                <label>Ha sido Candidato(a)</label>
                                {{input type="checkbox" checked=voter.has_been_candidate class="form-control"}}
                            </div>
                            <div class="col-md-4">
                                <!--<label>Año de la Elección:</label>-->
                                {{input type="number" min=0 oninput="validity.valid||(value='');" value=voter.election_year placeholder="Año de Candidatura" class="form-control voter-edit-field"}}
                            </div>
                            <div class="col-md-4">
                                <!--<label>Cargo de Elección Popular:</label>-->
                                {{input value=voter.popular_election_position placeholder="Cargo de Elección Popular" class="form-control voter-edit-field"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-4">
                                <!--<label>Via de Elección:</label>-->
                                {{#x-select class="form-control voter-edit-select" value=voter.election_route on-change=(action "updateElectionRoute" voter) as |hel|}} 
                                    {{#hel.option value='' disabled=true selected=true hidden=true}}Vía de Elección{{/hel.option}}
                                    {{#hel.option}}MAYORIA RELATIVA{{/hel.option}} 
                                    {{#hel.option}}PLURINOMINAL{{/hel.option}} 
                                {{/x-select}}
                            </div>
                            <div class="col-md-4">
                                <label>Resultó Electo(a)</label>
                                {{input type="checkbox" checked=voter.won_election class="form-control"}}
                            </div>
                        </div>

                        <h3 style="margin-top: 45px;">Otros</h3>
                        <div class="form-gorup row">
                            <div class="col-sm-5">
                                <!--<label>Último Grado de Estudios Terminado:</label>-->
                                {{#x-select class="form-control voter-edit-select" value=voter.highest_educational_level on-change=(action "updateEducation" voter) as |hel|}}
                                    {{#hel.option value='' disabled=true selected=true hidden=true}}Grado de Estudios{{/hel.option}}
                                    {{#hel.option}}PRIMARIA{{/hel.option}} 
                                    {{#hel.option}}SECUNDARIA{{/hel.option}} 
                                    {{#hel.option}}BACHILLERATO{{/hel.option}}
                                    {{#hel.option}}LICENCIATURA{{/hel.option}} 
                                    {{#hel.option}}MAESTRIA{{/hel.option}} 
                                {{/x-select}}
                            </div>
                            <div class="col-sm-5">
                                <!--<label>Ocupación Actual:</label>-->
                                {{#x-select class="form-control voter-edit-select" value=voter.current_ocupation on-change=(action "updateOcupation" voter) as |ocp|}} 
                                    {{#ocp.option value='' disabled=true selected=true hidden=true}}Ocupación{{/ocp.option}}
                                    {{#ocp.option}}SECTOR PUBLICO{{/ocp.option}} 
                                    {{#ocp.option}}EMPRESA PROPIA{{/ocp.option}} 
                                    {{#ocp.option}}TRABAJA EN IP{{/ocp.option}} 
                                    {{#ocp.option}}TRABAJA POR SU CUENTA{{/ocp.option}} 
                                    {{#ocp.option}}EDUCADOR(A){{/ocp.option}}
                                    {{#ocp.option}}OBRERO(A){{/ocp.option}} 
                                    {{#ocp.option}}TRABAJA EN EL CAMPO{{/ocp.option}}
                                    {{#ocp.option}}PENSION/JUBILACION{{/ocp.option}} 
                                    {{#ocp.option}}HOGAR{{/ocp.option}} 
                                    {{#ocp.option}}ESTUDIANTE{{/ocp.option}}
                                    {{#ocp.option}}TRABAJO DOMESTICO{{/ocp.option}} 
                                    {{#ocp.option}}DESEMPLEADO(A){{/ocp.option}}
                                {{/x-select}}
                            </div>
                        </div>

                        <h3 style="margin-top: 45px;">Notas</h3>
                        <div class="form-group row" style="margin-bottom:45px;">
                            <div class="col-sm-12">
                                <!--<label>Notas:</label>-->
                                {{textarea value=voter.notes rows=5 placeholder="Ingresa notas aquí" class="form-control voter-edit-field"}}
                            </div>
                        </div>

                        {{input type="submit" value=(if voter.id 'Actualizar' 'Crear') class="btn-success btn-lg btn-block"}}

                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>