<div class="row vertical-offset-50">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default panel-login">
            <div>
                <div class="row-fluid user-row">
                    <img id="login-logo" class="img-responsive" />
                    <h2 style="text-align: center; padding-top: 10px;">{{form-title}}</h2>
                </div>
            </div>
            <div class="panel-body">
                <form {{action (if voter.id 'update' 'create') voter on="submit" }} accept-charset="UTF-8" role="form" class="form-signin">
                    <fieldset>
                        <h3>Información Electoral</h3>
                        <div class="form-group row">
                            <div class="col-sm-8">
                                <label>Número de Credencial de Elector:<span class="text-danger">*</span></label> 
                                {{input value=voter.electoral_id_number required=true placeholder="Número de credencial de elector" class="form-control"}}
                            </div>
                            <div class="col-sm-4">
                                <label>Vigencia de Credencial de Elector:<span class="text-danger">*</span></label> 
                                {{#x-select class="form-control" value=voter.expiration_date required=true
                                on-change=(action "updateExpirationDate" voter) as |expir|}} 
                                    {{#expir.option value='' disabled=true selected=true hidden=true}}Seleccione una opción{{/expir.option}}
                                    {{#each years as |year|}}
                                        {{#expir.option value=year}}{{year}}{{/expir.option}} 
                                    {{/each}} 
                                {{/x-select}}
                            </div>
                        </div>

                        <h3>Información Personal</h3>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Apellido Paterno:<span class="text-danger">*</span></label> {{input value=voter.first_last_name required=true placeholder="Apellido Paterno"
                                class="form-control"}}
                            </div>
                            <div class="col-sm-6">
                                <label>Apellido Materno:</label> {{input value=voter.second_last_name placeholder="Apellido Materno"
                                class="form-control"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Primer Nombre:<span class="text-danger">*</span></label> {{input value=voter.first_name required=true placeholder="Primer Nombre" class="form-control"}}
                            </div>
                            <div class="col-sm-6">
                                <label>Segundo Nombre:</label> {{input value=voter.second_name placeholder="Segundo Nombre" class="form-control"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Fecha de Nacimiento:<span class="text-danger">*</span></label> {{bootstrap-datepicker value=voter.date_of_birth required=true language="es"
                                placeholder="Fecha de Nacimiento" class="form-control" format="dd/mm/yyyy" }}
                            </div>
                            <div class="col-sm-3">
                                <label>Genero:<span class="text-danger">*</span></label>
                                {{#x-select class="form-control" value=voter.gender required=true on-change=(action "updateGender" voter) as |gnd|}} 
                                    {{#gnd.option value='' disabled=true selected=true hidden=true}}Seleccione una opción{{/gnd.option}}
                                    {{#gnd.option value="H"}}Hombre{{/gnd.option}}
                                    {{#gnd.option value="M"}}Mujer{{/gnd.option}} 
                                {{/x-select}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Clave Electoral:<span class="text-danger">*</span></label> {{input value=voter.electoral_code required=true placeholder="Clave Electoral"
                                class="form-control"}}
                            </div>
                            <div class="col-sm-6">
                                <label>CURP:</label> {{input value=voter.CURP placeholder="CURP" class="form-control"}}
                            </div>
                        </div>

                        <h3>Dirección</h3>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Calle:</label> {{input value=voter.street placeholder="Calle" class="form-control"}}
                            </div>
                            <div class="col-sm-2">
                                <label>Número Exterior:</label> {{input value=voter.outside_number placeholder="Número Exterior"
                                class="form-control"}}
                            </div>
                            <div class="col-sm-2">
                                <label>Número Interior:</label> {{input value=voter.inside_number placeholder="Número interior"
                                class="form-control"}}
                            </div>
                        </div>
                        <div class="form-gorup row">
                            <div class="col-sm-5">
                                <label>Colónia:<span class="text-danger">*</span></label> {{input value=voter.suburb required=true placeholder="Colónia" class="form-control"}}
                            </div>
                            <div class="col-sm-5">
                                <label>Municipio:</label> {{input value=voter.municipality class="form-control" placeholder="Municipio"
                                }}
                            </div>
                            <div class="col-sm-2">
                                <label>Código Postal:<span class="text-danger">*</span></label> {{input type="number" min=0 required=true oninput="validity.valid||(value='');" value=voter.postal_code placeholder="Código
                                Postal" class="form-control"}}
                            </div>
                        </div>
                        <div class="form-gorup row">
                            <div class="col-sm-6">
                                <label>Estado:</label>
                                {{#x-select class="form-control" value=voter.state on-change=(action "updateState" voter) as |st|}}
                                    {{#st.option value='' disabled=true selected=true hidden=true}}Seleccione una opción{{/st.option}}
                                    {{#each states as |state idx|}}
                                        {{#st.option value=idx}}{{state}}{{/st.option}} 
                                    {{/each}} 
                                {{/x-select}}
                            </div>
                            <div class="col-sm-6">
                                <label>Localidad:</label> {{input value=voter.locality placeholder="Localidad" class="form-control"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-3">
                                <label>Clave de Municipio:<span class="text-danger">*</span></label> {{input type="number" min=0 required=true oninput="validity.valid||(value='');" value=voter.municipality_code placeholder="Municipio"
                                class="form-control"}}
                            </div>
                            <div class="col-sm-3">
                                <label>Clave de Sección:<span>*</span></label> {{input type="number" required=true min=0 oninput="validity.valid||(value='');" value=voter.section placeholder="Sección"
                                class="form-control"}}
                            </div>
                            <div class="col-sm-3">
                                <label>Clave de Localidad:</label> {{input type="number" min=0 oninput="validity.valid||(value='');" value=voter.locality_code placeholder="Localidad"
                                class="form-control"}}
                            </div>
                        </div>

                        <h3>Datos de Contacto</h3>
                        <div class="form-group row">
                            <div class="col-sm-4">
                                <label>Teléfono Fijo:<span class="text-danger">*</span></label> 
                                {{input type="number" min=0 required=true oninput="validity.valid||(value='');" value=voter.home_phone placeholder="Teléfono Fijo" class="form-control"}}
                            </div>
                            <div class="col-sm-4">
                                <label>Teléfono Móvil:<span class="text-danger">*</span></label> 
                                {{input type="number" min=0 required=true oninput="validity.valid||(value='');" value=voter.mobile_phone placeholder="Teléfono Móvil" class="form-control"}}
                            </div>
                            <div class="col-sm-4">
                                <label>Cuenta de Facebook:</label> {{input value=voter.facebook_account placeholder="Cuenta de Facebook"
                                class="form-control"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Correo Electrónico:</label> 
                                {{input type="email" value=voter.email placeholder="Correo Electrónico"
                                class="form-control"}}
                            </div>
                            <div class="col-sm-6">
                                <label>Correo Electrónico Alternativo:</label> 
                                {{input type="email" value=voter.alternative_email placeholder="Correo Electrónico Alternativo" class="form-control"}}
                            </div>
                        </div>

                        <h3>Demográfico</h3>
                        <div class="form-gorup row">
                            <div class="col-sm-5">
                                <label>Último Grado de Estudios Terminado:</label>
                                {{#x-select class="form-control" value=voter.highest_educational_level on-change=(action "updateEducation" voter) as |hel|}}
                                    {{#hel.option value='' disabled=true selected=true hidden=true}}Seleccione una opción{{/hel.option}}
                                    {{#hel.option}}PRIMARIA{{/hel.option}} 
                                    {{#hel.option}}SECUNDARIA{{/hel.option}} 
                                    {{#hel.option}}BACHILLERATO{{/hel.option}}
                                    {{#hel.option}}LICENCIATURA{{/hel.option}} 
                                    {{#hel.option}}MAESTRIA{{/hel.option}} 
                                {{/x-select}}
                            </div>
                            <div class="col-sm-5">
                                <label>Ocupación Actual:</label>
                                {{#x-select class="form-control" value=voter.current_ocupation on-change=(action "updateOcupation" voter) as |ocp|}} 
                                    {{#ocp.option value='' disabled=true selected=true hidden=true}}Seleccione una opción{{/ocp.option}}
                                    {{#ocp.option}}SECTOR PUBLICO{{/ocp.option}} 
                                    {{#ocp.option}}EMPRESA PROPIA{{/ocp.option}} 
                                    {{#ocp.option}}TRABAJA EN IP{{/ocp.option}} 
                                    {{#ocp.option}}TRABAJA POR SU CUENTA{{/ocp.option}} 
                                    {{#ocp.option}}EDUCADOR(A){{/ocp.option}}
                                    {{#ocp.option}}OBRERO(A){{/ocp.option}} 
                                    {{#ocp.option}}TRABAJA EN EL CAMPO{{/ocp.option}}
                                    {{#ocp.option}}PENSION/JUBILACION{{/ocp.option}} 
                                    {{#ocp.option}}HOGAR{{/ocp.option}} 
                                    {{#ocp.option}}ESTUDIANTE{{/ocp.option}}
                                    {{#ocp.option}}TRABAJO DOMESTICO{{/ocp.option}} 
                                    {{#ocp.option}}DESEMPLEADO(A){{/ocp.option}}
                                {{/x-select}}
                            </div>
                        </div>

                        <h3>Información del Partido</h3>
                        <div class="form-group row">
                            <div class="col-sm-4">
                                <label>Organización a la que Pertenece:</label>
                                {{input value=voter.organization class="form-control" placeholder="Organización a la que pertenece"}}
                            </div>
                            <div class="col-sm-5">
                                <label>Cargos Partidarios que ha Tenido:</label>
                                {{input value=voter.party_positions_held class="form-control" placeholder="Cargos partidarios que ha tenido"}}
                            </div>
                            <div class="col-sm-3">
                                <label>Pertenence a la Estructura del Partido:</label> {{input type="checkbox" checked=voter.is_part_of_party
                                class="form-control"}}
                            </div>
                        </div>
                        <div class="form-group row">

                            <div class="col-sm-2">
                                <label>Ha Sido Candidato(a):</label> {{input type="checkbox" checked=voter.has_been_candidate class="form-control"}}
                            </div>
                            <div class="col-sm-2">
                                <label>Año de la Elección:</label> {{input type="number" 
                                 min=0 oninput="validity.valid||(value='');" value=voter.election_year placeholder="Año de la Elección" class="form-control"}}
                            </div>
                            <div class="col-sm-6">
                                <label>Cargo de Elección Popular:</label>
                                {{input value=voter.popular_election_position class="form-control" placeholder="Cargo de elección popular"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-5">
                                <label>Via de Elección:</label>
                                {{#x-select class="form-control" value=voter.election_route on-change=(action "updateElectionRoute" voter) as |hel|}} 
                                    {{#hel.option value='' disabled=true selected=true hidden=true}}Seleccione una opción{{/hel.option}}
                                    {{#hel.option}}MAYORIA RELATIVA{{/hel.option}} 
                                    {{#hel.option}}PLURINOMINAL{{/hel.option}} 
                                {{/x-select}}
                            </div>
                            <div class="col-sm-2">
                                <label>Resultó Electo(a):</label>
                                {{input type="checkbox" checked=voter.won_election class="form-control"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <label>Notas:</label>
                                {{textarea value=voter.notes rows=5 placeholder="Notas" class="form-control"}}
                            </div>
                        </div>
                        <div style="text-align: right">
                            <p class="text-danger">* Campo requerido</p>
                        </div> 
                        {{input type="submit" value=(if voter.id 'Actualizar' 'Crear') class="btn btn-lg btn-block login-btn"}}
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>