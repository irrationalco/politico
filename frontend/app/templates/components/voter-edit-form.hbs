                                {{input value=voter.municipality placeholder="Municipio" class="form-control"}}
                            <label>Sección:</label>
                                {{input value=voter.section placeholder="Sección" class="form-control"}}
                            <label>Localidad:</label>
                                {{input value=voter.locality placeholder="Localidad" class="form-control"}}
                            <label>Manzana:</label>
                                {{input value=voter.apple placeholder="Manzana" class="form-control"}}
                            <label>CONS_LC:</label>
                                {{input value=voter.CONS_LC placeholder="CONS_LC" class="form-control"}}
                            <label>EMISIONCRE:</label>
                                {{input value=voter.EMISIONCRE placeholder="EMISIONCRE" class="form-control"}}
                            {{input type="submit" value="Crear" class="btn btn-lg btn-block login-btn"}}
                        </fieldset>
                    </form>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>s