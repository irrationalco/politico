<div class="row vertical-offset-50">
    <div class="col-md-8 col-md-offset-2">
        <div class="panel panel-default panel-login">
            <div>
                <div class="row-fluid user-row">
                    <img id="login-logo" class="img-responsive" />
                    <h2 style="text-align: center; padding-top: 10px;">{{form-title}}</h2>
                </div>
            </div>
            <div class="panel-body">
                <form {{action (if voter.id 'update' 'create') voter on="submit" }} accept-charset="UTF-8" role="form" class="form-signin">
                    <fieldset>
                        <div class="form-group row">
                            <div class="col-sm-8">
                                <label>Número de credencial de elector</label> {{input value=voter.electoral_id_number 
                                placeholder="Número de credencial de elector" class="form-control"}}
                            </div>
                            <div class="col-sm-4">
                                <label>Vigencia de credencial de elector</label> {{input type="number" value=voter.expiration_date
                                placeholder="Vigencia de credencial" class="form-control"}}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Primer Nombre:</label> {{input value=voter.first_name placeholder="Primer Nombre"
                                class="form-control"}}
                            </div>
                            <div class="col-sm-6">
                                <label>Segundo Nombre:</label> {{input value=voter.second_name placeholder="Segundo Nombre"
                                class="form-control"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Apellido Paterno:</label> {{input value=voter.first_last_name 
                                placeholder="Apellido Paterno" class="form-control"}}
                            </div>
                            <div class="col-sm-6">
                                <label>Apellido Materno:</label> {{input value=voter.second_last_name 
                                placeholder="Apellido Materno" class="form-control"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-9">
                                <label>CURP:</label> {{input value=voter.CURP placeholder="CURP" class="form-control"}}
                            </div>
                            <div class="col-sm-3">
                                <label>Genero:</label> 
                                {{#x-select class="form-control" value=voter.gender on-change=(action "updateGender" voter) as |gnd|}} 
                                {{#gnd.option value="H"}}Hombre{{/gnd.option}} 
                                {{#gnd.option value="M"}}Mujer{{/gnd.option}} 
                                {{/x-select}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Clave Electoral:</label> {{input value=voter.electoral_code placeholder="Clave Electoral"
                                class="form-control"}}
                            </div>
                            <div class="col-sm-6">
                                <label>Fecha de Nacimiento:</label> {{bootstrap-datepicker value=voter.date_of_birth language="es"
                                placeholder="Fecha de Nacimiento" class="form-control" format="dd/mm/yyyy" }}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Calle:</label> {{input value=voter.street placeholder="Calle" class="form-control"}}
                            </div>
                            <div class="col-sm-2">
                                <label>Número Exterior:</label> {{input value=voter.outside_number placeholder="Número Exterior"
                                class="form-control"}}
                            </div>
                            <div class="col-sm-2">
                                <label>Número interior:</label> {{input value=voter.inside_number placeholder="Número interior"
                                class="form-control"}}
                            </div>
                            <div class="col-sm-2">
                                <label>Código Postal:</label> {{input type="number" value=voter.postal_code 
                                placeholder="Código Postal" class="form-control"}}
                            </div>
                        </div>
                        <div class="form-gorup row">
                            <div class="col-sm-6">
                                <label>Colónia:</label> {{input value=voter.suburb placeholder="Colónia" class="form-control"}}
                            </div>
                            <div class="col-sm-6">
                                <label>Municipio:</label> {{input value=voter.municipality class="form-control"
                                placeholder="Municipio" }}
                            </div>
                        </div>
                        <div class="form-gorup row">
                            <div class="col-sm-6">
                                <label>Localidad:</label> {{input value=voter.locality placeholder="Localidad" class="form-control"}}
                            </div>
                            <div class="col-sm-6">
                                <label>Estado:</label> {{input value=voter.state class="form-control"
                                placeholder="Estado" }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-3">
                                <label>Clave de Estado:</label> {{input type="number" value=voter.state_code placeholder="Estado" class="form-control"}}
                            </div>
                            <div class="col-sm-3">
                                <label>Clave de Municipio:</label> {{input type="number" value=voter.municipality_code placeholder="Municipio"
                                class="form-control"}}
                            </div>
                            <div class="col-sm-3">
                                <label>Clave de Sección:</label> {{input type="number" value=voter.section placeholder="Sección" class="form-control"}}
                            </div>
                            <div class="col-sm-3">
                                <label>Clave de Localidad:</label> {{input type="number" value=voter.locality_code placeholder="Localidad"
                                class="form-control"}}
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-sm-4">
                                <label>Teléfono Fijo:</label> {{input type="number" value=voter.home_phone placeholder="Teléfono Fijo" class="form-control"}}
                            </div>
                            <div class="col-sm-4">
                                <label>Teléfono Móvil:</label> {{input type="number" value=voter.mobile_phone placeholder="Teléfono Móvil"
                                class="form-control"}}
                            </div>
                            <div class="col-sm-4">
                                <label>Cuenta de Facebook:</label> {{input value=voter.facebook_account 
                                placeholder="Cuenta de Facebook" class="form-control"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Correo Electrónico:</label> {{input type="email" value=voter.email placeholder="Correo Electrónico" class="form-control"}}
                            </div>
                            <div class="col-sm-6">
                                <label>Correo Electrónico:</label> {{input type="email" value=voter.alternative_email placeholder="Correo Electrónico"
                                class="form-control"}}
                            </div>
                        </div>

                        <div class="form-gorup row">
                            <div class="col-sm-4">
                                <label>Último grado de estudios terminado:</label> 
                                {{#x-select class="form-control" value=voter.highest_educational_level on-change=(action "updateEducation" voter) as |hel|}} 
                                {{#hel.option}}PRIMARIA{{/hel.option}}
                                {{#hel.option}}SECUNDARIA{{/hel.option}} 
                                {{#hel.option}}BACHILLERATO{{/hel.option}} 
                                {{#hel.option}}LICENCIATURA{{/hel.option}}
                                {{#hel.option}}MAESTRIA{{/hel.option}}
                                {{/x-select}}
                            </div>
                            <div class="col-sm-4">
                                <label>Ocupación Actual:</label>
                                {{#x-select class="form-control" value=voter.current_ocupation on-change=(action "updateOcupation" voter) as |ocp|}} 
                                {{#ocp.option}}SECTOR PUBLICO{{/ocp.option}}
                                {{#ocp.option}}EMPRESA PROPIA{{/ocp.option}} 
                                {{#ocp.option}}TRABAJA EN IP{{/ocp.option}} 
                                {{#ocp.option}}TRABAJA POR SU CUENTA{{/ocp.option}}
                                {{#ocp.option}}EDUCADOR(A){{/ocp.option}}
                                {{#ocp.option}}OBRERO(A){{/ocp.option}}
                                {{#ocp.option}}TRABAJA EN EL CAMPO{{/ocp.option}}
                                {{#ocp.option}}PENSION/JUBILACION{{/ocp.option}}
                                {{#ocp.option}}HOGAR{{/ocp.option}}
                                {{#ocp.option}}ESTUDIANTE{{/ocp.option}}
                                {{#ocp.option}}TRABAJO DOMESTICO{{/ocp.option}}
                                {{#ocp.option}}DESEMPLEADO(A){{/ocp.option}}
                                {{/x-select}}
                            </div>
                            <div class="col-sm-4">
                                <label>Organización a la que pertenece:</label>
                                {{#x-select class="form-control" value=voter.organization on-change=(action "updateOrganization" voter) as |ogz|}} 
                                {{#ogz.option}}JOVENES{{/ogz.option}}
                                {{#ogz.option}}INDIGENAS{{/ogz.option}}
                                {{#ogz.option}}CON DISCAPACIDAD{{/ogz.option}}
                                {{#ogz.option}}REGIDORAS{{/ogz.option}}
                                {{#ogz.option}}DIPUTADAS LOCALES{{/ogz.option}}
                                {{#ogz.option}}SINDICAS{{/ogz.option}}
                                {{#ogz.option}}DEPORTE Y CULTURA{{/ogz.option}}
                                {{#ogz.option}}SALUD{{/ogz.option}}
                                {{#ogz.option}}ADULTAS MAYORES{{/ogz.option}}
                                {{#ogz.option}}EDUCACION{{/ogz.option}}
                                {{#ogz.option}}EMPRESARIAL{{/ogz.option}}
                                {{#ogz.option}}OTRO{{/ogz.option}}
                                {{/x-select}}
                            </div>
                        </div>
                        
                        <div class="form-group row">
                            <div class="col-sm-5">
                                <label>Cargos partidarios que ha tenido:</label> 
                                {{input value=voter.party_positions_held class="form-control"
                                placeholder="Cargos partidarios que ha tenido"}}
                            </div>
                            <div class="col-sm-3">
                                <label>Pertenence a la estructura del Partido:</label> {{input type="checkbox" checked=voter.is_part_of_party class="form-control"}}
                            </div>
                            <div class="col-sm-2">
                                <label>Ha sido candidato(a):</label> {{input type="checkbox" checked=voter.has_been_candidate class="form-control"}}
                            </div>
                            <div class="col-sm-2">
                                <label>Año de la Elección:</label> {{input type="number" value=voter.election_year placeholder="Año de la Elección"
                                class="form-control"}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-6">
                                <label>Cargo de elección popular:</label> 
                                {{input value=voter.popular_election_position class="form-control"
                                placeholder="Cargo de elección popular"}}
                            </div>
                            <div class="col-sm-1">
                                <label>Resultó electo(a):</label> 
                                {{input type="checkbox" checked=voter.won_election class="form-control"}}
                            </div>
                            <!-- resulto electo falta -->
                            <div class="col-sm-5">
                                <label>Via de elección:</label> 
                                {{#x-select class="form-control" value=voter.election_route on-change=(action "updateElectionRoute" voter) as |hel|}} 
                                {{#hel.option}}MAYORIA RELATIVA{{/hel.option}}
                                {{#hel.option}}PLURINOMINAL{{/hel.option}}
                                {{/x-select}}
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-12">
                                <label>Notas:</label>
                                {{textarea value=voter.notes rows=5 placeholder="Notas" class="form-control"}}
                            </div>
                        </div>
                        {{input type="submit" value=(if voter.id 'Actualizar' 'Crear') class="btn btn-lg btn-block login-btn"}}
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>