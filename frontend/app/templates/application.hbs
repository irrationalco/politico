<div id="container" class="{{unless sidebarOpen "sidebar-closed"}}">
  {{!-- Header --}}
  <header class="header black-bg">
    <div class="sidebar-toggle-box">
      <div class="fa fa-bars tooltips" {{action "toggleSidebar"}}></div>
    </div>

    <a href="index.html" class="logo"><b>Asesor Político Inteligente</b></a>
    
    <div class="top-menu">
      {{!-- <ul class="nav pull-right top-menu">
        <li></li>
      </ul> --}}
      <div class="pull-right profile-circle">
        HF
      </div>
    </div>
  </header>

  {{!-- Sidebar --}}
  {{#if sidebarOpen}}
    <div id="sidebar" class="sidebar-box nav-collapse">
      <ul class="sidebar-menu" id="nav-accordion">
        {{!-- Maps --}}
        <li class="sub-menu mt">
          {{#link-to "maps.projections"}}
            <i class="fa fa-map-o"></i>
          {{/link-to}}
        </li>

        {{!-- Polls --}}
        <li class="sub-menu">
          {{#link-to "polls" 1}}
            <i class="fa fa-bar-chart-o"></i>
          {{/link-to}}
        </li>

        {{!-- Another section --}}
        <li class="sub-menu">
          <a>
            <i class="fa fa-file-o"></i>
          </a>
        </li>
      </ul>
    </div>
  {{/if}}

  {{!-- Content --}}
  <section id="main-content">
      {{outlet}}
  </section>
</div>
